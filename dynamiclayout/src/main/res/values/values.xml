<?xml version="1.0" encoding="utf-8"?>
<resources>
    <item name="empty_image" type="id" />
    <item name="empty_text" type="id" />

    <item name="error_image" type="id" />
    <item name="error_text" type="id" />
    <item name="retry_button" type="id" />

    <item name="loading_progress" type="id" />
    <item name="loading_text" type="id" />

    <attr name="dynamicLayoutStyle" format="reference" />

    <style name="DynamicLayout" />

    <style name="DynamicLayout.Style">
        <item name="emptyLayout">@layout/_loading_layout_empty</item>
        <item name="loadingLayout">@layout/_loading_layout_loading</item>
        <item name="errorLayout">@layout/_loading_layout_error</item>

        <item name="emptyImage">@null</item>
        <item name="emptyText">暂无数据</item>
        <item name="loadingText">加载中...</item>
        <item name="loadingProgressColor">#00b192</item>
        <item name="errorImage">@null</item>
        <item name="errorText">加载失败~</item>
        <item name="retryButtonText">点击重试</item>

        <item name="emptyTextAppearance">@style/TextAppearance.DynamicLayout.EmptyText</item>
        <item name="loadingTextAppearance">@style/TextAppearance.DynamicLayout.LoadingText</item>
        <item name="errorTextAppearance">@style/TextAppearance.DynamicLayout.ErrorText</item>
        <item name="retryButtonTextAppearance">@style/TextAppearance.DynamicLayout.RetryButtonText</item>

        <item name="retryButtonBackground">@drawable/_loading_layout_button</item>
    </style>


    <style name="TextAppearance.DynamicLayout" parent="TextAppearance.AppCompat"/>

    <style name="TextAppearance.DynamicLayout.EmptyText">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.DynamicLayout.LoadingText">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.DynamicLayout.ErrorText">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.DynamicLayout.RetryButtonText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
    </style>

    <declare-styleable name="DynamicLayout">
        <!-- 空布局资源id -->
        <attr name="emptyLayout" format="reference" />
        <!-- 加载中布局资源id -->
        <attr name="loadingLayout" format="reference" />
        <!-- 错误布局资源id -->
        <attr name="errorLayout" format="reference" />

        <!-- 空布局图片 -->
        <attr name="emptyImage" format="reference" />
        <!-- 空布局文本 -->
        <attr name="emptyText" format="string" />
        <!-- 空布局文本颜色 -->
        <attr name="emptyTextColor" format="color" />
        <!-- 空布局文本样式 -->
        <attr name="emptyTextAppearance" format="reference" />

        <!-- 错误布局图片 -->
        <attr name="errorImage" format="reference" />
        <!-- 错误布局文本 -->
        <attr name="errorText" format="string" />
        <!-- 错误布局文本颜色 -->
        <attr name="errorTextColor" format="color" />
        <!-- 错误布局文本样式 -->
        <attr name="errorTextAppearance" format="reference" />
        <!-- 错误布局重试按钮文本 -->
        <attr name="retryButtonText" format="string" />
        <!-- 错误布局重试按钮文本颜色 -->
        <attr name="retryButtonTextColor" format="color" />
        <!-- 错误布局重试按钮文本样式 -->
        <attr name="retryButtonTextAppearance" format="reference" />
        <!-- 错误布局重试按钮背景 -->
        <attr name="retryButtonBackground" format="reference" />

        <!-- 加载中布局进度条颜色 -->
        <attr name="loadingProgressColor" />
        <!-- 加载中布局进度条图片-->
        <attr name="loadingProgressDrawable" format="reference" />
        <!-- 加载中布局文本 -->
        <attr name="loadingText" format="string" />
        <!-- 加载中布局文本颜色 -->
        <attr name="loadingTextColor" format="color" />
        <!-- 加载中布局文本样式 -->
        <attr name="loadingTextAppearance" format="reference" />
    </declare-styleable>
</resources>