<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="statefulFrameLayoutStyle" format="reference" />

    <style name="Widget.AppCompat.StatefulFrameLayout" parent="android:Widget">
        <item name="emptyLayout">@layout/abc_loader_layout_empty</item>
        <item name="loadingLayout">@layout/abc_loader_layout_loading</item>
        <item name="errorLayout">@layout/abc_loader_layout_error</item>

        <item name="emptyImage">@null</item>
        <item name="emptyText">@string/loader_empty_message</item>
        <item name="loadingText">@string/loader_progress_message</item>
        <item name="loadingProgressColor">?attr/colorAccent</item>
        <item name="errorImage">@null</item>
        <item name="errorText">@string/loader_error_message</item>
        <item name="errorButtonText">@string/loader_retry_message</item>

        <item name="emptyTextAppearance">@style/TextAppearance.StatefulFrameLayout.EmptyText</item>
        <item name="emptyButtonTextAppearance">@style/TextAppearance.StatefulFrameLayout.ButtonText</item>
        <item name="loadingTextAppearance">@style/TextAppearance.StatefulFrameLayout.LoadingText
        </item>
        <item name="errorTextAppearance">@style/TextAppearance.StatefulFrameLayout.ErrorText</item>
        <item name="errorButtonTextAppearance">@style/TextAppearance.StatefulFrameLayout.ButtonText</item>
    </style>

    <style name="TextAppearance.StatefulFrameLayout" parent="TextAppearance.AppCompat" />

    <style name="TextAppearance.StatefulFrameLayout.EmptyText">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.StatefulFrameLayout.LoadingText">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.StatefulFrameLayout.ErrorText">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.StatefulFrameLayout.ButtonText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Progress.Dialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@style/Animation.Progress.Dialog</item>
    </style>

    <style name="Animation.Progress.Dialog" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_progress_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_progress_dialog_exit</item>
    </style>

</resources>