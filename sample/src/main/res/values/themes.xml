<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Kotlins" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="dividerHorizontal">@drawable/divider_horizontal</item>
    </style>

    <style name="Theme.Kotlins" parent="Base.Theme.Kotlins" />

    <style name="Theme.Kotlins.Main">
        <!-- AppBarLayout statusBarForeground 生效-->
