<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="statefulLayoutStyle" format="reference" />

    <style name="StatefulLayout" />

    <style name="StatefulLayout.Style">
        <item name="emptyLayout">@layout/abc_loader_layout_empty</item>
        <item name="loadingLayout">@layout/abc_loader_layout_loading</item>
        <item name="errorLayout">@layout/abc_loader_layout_error</item>

        <item name="emptyImage">@null</item>
        <item name="emptyText">@string/loader_empty_message</item>
        <item name="loadingText">@string/loader_progress_message</item>
        <item name="loadingProgressColor">?attr/colorAccent</item>
        <item name="errorImage">@null</item>
        <item name="errorText">@string/loader_error_message</item>
        <item name="errorButtonText">@string/loader_retry_message</item>

        <item name="emptyTextAppearance">@style/TextAppearance.StatefulLayout.EmptyText</item>
        <item name="emptyButtonTextAppearance">@style/TextAppearance.StatefulLayout.ButtonText
        </item>
        <item name="loadingTextAppearance">@style/TextAppearance.StatefulLayout.LoadingText</item>
        <item name="errorTextAppearance">@style/TextAppearance.StatefulLayout.ErrorText</item>
        <item name="errorButtonTextAppearance">@style/TextAppearance.StatefulLayout.ButtonText
        </item>

        <item name="emptyButtonBackground">@drawable/loading_layout_button</item>
        <item name="errorButtonBackground">@drawable/loading_layout_button</item>
    </style>


    <style name="TextAppearance.StatefulLayout" parent="TextAppearance.AppCompat" />

    <style name="TextAppearance.StatefulLayout.EmptyText">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.StatefulLayout.LoadingText">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.StatefulLayout.ErrorText">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.StatefulLayout.ButtonText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Animation.Progress.Popup" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_popup_exit</item>
    </style>

</resources>