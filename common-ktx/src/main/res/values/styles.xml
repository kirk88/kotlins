<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="loaderLayoutStyle" format="reference" />

    <style name="LoaderLayout" />

    <style name="LoaderLayout.Style">
        <item name="emptyLayout">@layout/abc_loader_layout_empty</item>
        <item name="loadingLayout">@layout/abc_loader_layout_loading</item>
        <item name="errorLayout">@layout/abc_loader_layout_error</item>

        <item name="emptyImage">@null</item>
        <item name="emptyText">@string/loader_empty_tip</item>
        <item name="loadingText">@string/loader_progress_tip</item>
        <item name="loadingProgressColor">?attr/colorAccent</item>
        <item name="errorImage">@null</item>
        <item name="errorText">@string/loader_error_tip</item>
        <item name="errorButtonText">@string/loader_retry_tip</item>

        <item name="emptyTextAppearance">@style/TextAppearance.LoaderLayout.EmptyText</item>
        <item name="emptyButtonTextAppearance">@style/TextAppearance.LoaderLayout.ButtonText
        </item>
        <item name="loadingTextAppearance">@style/TextAppearance.LoaderLayout.LoadingText</item>
        <item name="errorTextAppearance">@style/TextAppearance.LoaderLayout.ErrorText</item>
        <item name="errorButtonTextAppearance">@style/TextAppearance.LoaderLayout.ButtonText
        </item>

        <item name="emptyButtonBackground">@drawable/loading_layout_button</item>
        <item name="errorButtonBackground">@drawable/loading_layout_button</item>
    </style>


    <style name="TextAppearance.LoaderLayout" parent="TextAppearance.AppCompat" />

    <style name="TextAppearance.LoaderLayout.EmptyText">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.LoaderLayout.LoadingText">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.LoaderLayout.ErrorText">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.LoaderLayout.ButtonText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>