<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="statefulLayoutStyle" format="reference" />

    <style name="StatefulLayout" />

    <style name="StatefulLayout.Style">
        <item name="emptyLayout">@layout/layout_empty</item>
        <item name="loadingLayout">@layout/layout_loading</item>
        <item name="errorLayout">@layout/layout_error</item>

        <item name="emptyImage">@null</item>
        <item name="emptyText">@string/load_empty_tip</item>
        <item name="loadingText">@string/load_progress_tip</item>
        <item name="loadingProgressColor">?attr/colorAccent</item>
        <item name="errorImage">@null</item>
        <item name="errorText">@string/load_error_tip</item>
        <item name="errorButtonText">@string/load_retry_tip</item>

        <item name="emptyTextAppearance">@style/TextAppearance.StatefulLayout.EmptyText</item>
        <item name="emptyButtonTextAppearance">@style/TextAppearance.StatefulLayout.ButtonText
        </item>
        <item name="loadingTextAppearance">@style/TextAppearance.StatefulLayout.LoadingText</item>
        <item name="errorTextAppearance">@style/TextAppearance.StatefulLayout.ErrorText</item>
        <item name="errorButtonTextAppearance">@style/TextAppearance.StatefulLayout.ButtonText
        </item>

        <item name="emptyButtonBackground">@drawable/loading_layout_button</item>
        <item name="errorButtonBackground">@drawable/loading_layout_button</item>
    </style>


    <style name="TextAppearance.StatefulLayout" parent="TextAppearance.AppCompat" />

    <style name="TextAppearance.StatefulLayout.EmptyText">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.StatefulLayout.LoadingText">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.StatefulLayout.ErrorText">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.StatefulLayout.ButtonText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
    </style>

    <declare-styleable name="StatefulLayout">
        <!-- 空布局资源id -->
        <attr name="emptyLayout" format="reference" />
        <!-- 加载中布局资源id -->
        <attr name="loadingLayout" format="reference" />
        <!-- 错误布局资源id -->
        <attr name="errorLayout" format="reference" />
        <!-- 默认显示布局  -->
        <attr name="defaultShow" format="enum">
            <enum name="content" value="0x001" />
            <enum name="empty" value="0x002" />
            <enum name="loading" value="0x003" />
            <enum name="error" value="0x004" />
        </attr>

        <!-- 空布局图片 -->
        <attr name="emptyImage" format="reference" />
        <!-- 空布局文本 -->
        <attr name="emptyText" format="string" />
        <!-- 空布局文本颜色 -->
        <attr name="emptyTextColor" format="color" />
        <!-- 空布局文本样式 -->
        <attr name="emptyTextAppearance" format="reference" />
        <!-- 空布局按钮文本 -->
        <attr name="emptyButtonText" format="string" />
        <!-- 空布局按钮文本颜色 -->
        <attr name="emptyButtonTextColor" format="color" />
        <!-- 空布局按钮文本样式 -->
        <attr name="emptyButtonTextAppearance" format="reference" />
        <!-- 空布局按钮背景 -->
        <attr name="emptyButtonBackground" format="reference" />
        <!-- 空布局按钮显示与否 -->
        <attr name="emptyButtonVisible" format="boolean" />

        <!-- 错误布局图片 -->
        <attr name="errorImage" format="reference" />
        <!-- 错误布局文本 -->
        <attr name="errorText" format="string" />
        <!-- 错误布局文本颜色 -->
        <attr name="errorTextColor" format="color" />
        <!-- 错误布局文本样式 -->
        <attr name="errorTextAppearance" format="reference" />
        <!-- 错误布局重试按钮文本 -->
        <attr name="errorButtonText" format="string" />
        <!-- 错误布局重试按钮文本颜色 -->
        <attr name="errorButtonTextColor" format="color" />
        <!-- 错误布局重试按钮文本样式 -->
        <attr name="errorButtonTextAppearance" format="reference" />
        <!-- 错误布局重试按钮背景 -->
        <attr name="errorButtonBackground" format="reference" />
        <!-- 错误布局按钮显示与否 -->
        <attr name="errorButtonVisible" format="boolean" />

        <!-- 加载中布局进度条颜色 -->
        <attr name="loadingProgressColor" />
        <!-- 加载中布局进度条图片-->
        <attr name="loadingProgressDrawable" format="reference" />
        <!-- 加载中布局文本 -->
        <attr name="loadingText" format="string" />
        <!-- 加载中布局文本颜色 -->
        <attr name="loadingTextColor" format="color" />
        <!-- 加载中布局文本样式 -->
        <attr name="loadingTextAppearance" format="reference" />
    </declare-styleable>


    <declare-styleable name="TitleBar">
        <attr name="useCustomTitle" format="boolean" />
        <attr name="titleTextAppearance" />
        <attr name="titleTextColor" />
        <attr name="subtitleTextAppearance" />
        <attr name="subtitleTextColor" />
        <attr name="navigationIcon" format="reference" />
        <attr name="navigationContentDescription" format="reference|string" />
        <attr name="navigationIconTint" format="color|reference" />
        <attr name="navigationIconTintMode" format="enum">
            <enum name="clear" value="0" />
            <enum name="src" value="1" />
            <enum name="dst" value="2" />
            <enum name="src_over" value="3" />
            <enum name="dst_over" value="4" />
            <enum name="src_in" value="5" />
            <enum name="dst_in" value="6" />
            <enum name="src_out" value="7" />
            <enum name="dst_out" value="8" />
            <enum name="src_atop" value="9" />
            <enum name="dst_atop" value="10" />
            <enum name="xor" value="11" />
            <enum name="darken" value="16" />
            <enum name="lighten" value="17" />
            <enum name="multiply" value="13" />
            <enum name="screen" value="14" />
            <enum name="add" value="12" />
            <enum name="overlay" value="15" />
        </attr>
        <attr name="title" />
        <attr name="subtitle" />
        <attr name="menu" />
        <attr name="showHomeEnabled" format="boolean" />
        <attr name="homeAsUpEnabled" format="boolean" />
        <attr name="showBottomDivider" format="enum">
            <enum name="ifNeed" value="0" />
            <enum name="always" value="1" />
            <enum name="never" value="2" />
        </attr>
        <attr name="bottomDividerHeight" format="dimension|reference" />
        <attr name="bottomDividerColor" format="color|reference" />
        <attr name="attachToActivity" format="boolean" />
    </declare-styleable>

    <attr name="titleBarStyle" format="reference" />

    <attr name="titleBarSize" format="dimension|reference" />
</resources>